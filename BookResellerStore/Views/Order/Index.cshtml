@model IEnumerable<BookResellerStore.DTOs.OrderedBook>
<style>
    span.quanlity {
        float: right;
        color: grey;
    }

    span.price {
        float: right;
        margin-left: 100px;
    }

    .cart {
        background-color: #f2f2f2;
        padding: 5px 20px 15px 20px;
        border: 1px solid lightgrey;
        border-radius: 3px;
    }

    a {
        text-decoration: none;
        display: inline-block;
        padding: 8px 16px;
    }

        a:hover {
            background-color: #ddd;
            color: black;
            cursor: pointer;
        }

    #previous, #viewOrder {
        background-color: #f1f1f1;
        color: black;
    }

    .button-section {
        grid-row: 1;
    }

    .cart {
        grid-row: 2;
    }
</style>
<div class=".button-section"><a id="continueOrder">&laquo; Continue Order</a></div>
<div class="cart">
    <h4 style="text-align:left"> Books <span class="price" style="color:black"> <i class="fa fa-shopping-cart"> </i> <b>@Model.Count()</b> </span> </h4>
    @foreach (var item in Model)
    {
        <p style="text-align:left"><a class="linkBookDetail" uid="@item.BookId" >@item.BookName</a><span class="price">$@item.Price</span> <span class="quanlity">@item.Quanlity</span> </p>
    }
    <hr>
    <p style="text-align:left"> Total <span class="price" style="color:black"> <b>$@Model.Sum(x => x.Price)</b> </span> </p>
    <button id="btnExportOrder" type="button">Export orders</button>
</div>
<script src="~/js/application/Order.js"></script>