<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

<style>
    .search-section {
        grid-row: 1;
    }

    .data-section {
        grid-row: 2;
        padding: 20px 0;
        height: 100%;
    }

    .footer-section {
        grid-row: 3;
    }

    .grid-container {
       
    }

    .grid-container > div {
        /* background-color: rgba(255, 255, 255, 0.8);*/
        text-align: center;
        /*  padding: 10px 0;*/
        width: 100%;
    }

    #grid-view {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        grid-gap: 30px 12px;
       
    }

    .card-book {
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
        width: 200px;
    }

        .card-book:hover {
            box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
        }

    .container-book .price {
        color: grey;
        font-size: 22px;
    }

    .container-book p button {
        border: none;
        outline: 0;
        padding: 12px;
        color: white;
        background-color: #FF8D14;
        text-align: center;
        cursor: pointer;
        width: 100%;
        font-size: 18px;
    }

        .container-book p button:hover {
            opacity: 0.7;
            color: black;
        }

    /* Style the search field */
    form.example input[type=text] {
        padding: 10px;
        font-size: 17px;
        border: 1px solid grey;
        float: left;
        width: 80%;
        background: #f1f1f1;
    }

    /* Style the submit button */
    form.example button {
        float: left;
        width: 20%;
        padding: 10px;
        background: #2196F3;
        color: white;
        font-size: 17px;
        border: 1px solid grey;
        border-left: none; /* Prevent double borders */
        cursor: pointer;
    }

        form.example button:hover {
            background: #0b7dda;
        }

    /* Clear floats */
    form.example::after {
        content: "";
        clear: both;
        display: table;
    }
</style>
<div class="grid-container">
    <div class="search-section">
        <!-- The form -->
        <form class="example">
            <input id="txtSearchBook" type="text" placeholder="Type in Book Name, ISBN code, Author, StoreName" name="search">
            <button id="btnSearchBook" type="button"><i class="fa fa-search"></i></button>
        </form>
    </div>
    <div class="data-section">
        <div id="grid-view"></div>
        <div id="detail-view"></div>
        <div id="order-view"></div>
    </div>
    <div class="footer-section"></div>
</div>

<script src="~/js/application/Book.js"></script>