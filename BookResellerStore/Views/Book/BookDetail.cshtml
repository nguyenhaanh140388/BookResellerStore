@model BookResellerStore.DTOs.BookDto
@*@Model.BookName
    @Model.Author
    @Model.Isbncode
    @Model.Price
    @Model.StoreName
    @Model.NumberInStock*@
<style>
    a {
        text-decoration: none;
        display: inline-block;
        padding: 8px 16px;
    }

        a:hover {
            background-color: #ddd;
            color: black;
            cursor: pointer;
        }

    #previous, #viewOrder {
        background-color: #f1f1f1;
        color: black;
    }

    .button-section {
        grid-row: 1;
    }

    .data-section {
        grid-row: 2;
    }

    .centered {
        /*  position: absolute;*/
        transform: translate(-50%, -50%);
    }

    .single-item {
        /* position: absolute;*/
        /* transform: translate(-50%, -50%);*/
        width: auto;
        height: 360px;
        border: solid 6px #fff;
        border-radius: 10px;
        background: #f5f5f5;
        box-shadow: 0 30px 20px -20px rgba(0, 0, 0, 0.3);
        box-sizing: border-box;
    }

    .left-set,
    .right-set {
        /*  position: relative;*/
        width: 50%;
        height: 100%;
    }

    .left-set {
        float: left;
        overflow: hidden;
    }

        .left-set img {
            position: relative;
            top: 20px;
            left: 20px;
            /* transform: translate(-50%, -50%);*/
            width: 220px;
            height: 300px;
        }

    .right-set {
        float: right;
        padding: 2rem 1rem;
        box-sizing: border-box;
    }

        .right-set .bookname,
        .right-set .subname {
            font-weight: bold;
        }

        .right-set .bookname {
            font-size: 2.5rem;
            line-height: 2rem;
        }

        .right-set .subname {
            font-size: 0.8rem;
            line-height: 2rem;
        }

        .right-set .price {
            padding: 1rem 0;
            font-size: 2rem;
            font-weight: bold;
        }

        .right-set .isbncode {
            font-size: 1.5rem;
            line-height: 2rem;
        }

        .right-set .storename {
            font-size: 1.5rem;
            line-height: 2rem;
        }

        .right-set .numberinstock {
            font-size: 1.5rem;
            line-height: 2rem;
            font-weight: bold;
            color: red;
        }

        .right-set .order-option {
            line-height: 2rem;
            padding: 50px 0;
        }

        .right-set .command {
            height: 3rem;
            padding:5px 0;
        }

        .right-set .command button {
            width: 200px;
            cursor: pointer;
            background: none;
            border: solid 2px #111;
            border-radius: 4px;
            font-weight: bold;
            letter-spacing: 0.2rem;
            transition: all 0.4s ease;
        }

            .right-set button:hover {
                background: #70e1f5;
            }

    #up, #down, #quantity {
        width: 35px;
        height:25px;
    }
</style>
<div class="detail-container">
    <div class="button-section"><a id="previous">&laquo; Previous</a>
                                <a id="viewOrder">Go to Orders</a>
    </div>
    <div class="data-section">
        <div class="single-item" uid=@Model.BookId>
            <div class="left-set">
                <img src="/images/Book-Cover.jpg" alt="" />
            </div>
            <div class="right-set">
                <div class="bookname">Title: @Model.BookName</div>
                <div class="author">Author: @Model.Author</div>
                <div class="price">Price: $@Model.Price</div>
                <div class="isbncode">ISBN Code: @Model.Isbncode</div>
                <div class="storename">Store Name: @Model.StoreName</div>
                <div class="numberinstock">Number In Stock : @Model.NumberInStock/100 unit</div>
                <div class="order-option">
                    Quantity:
                    <span id="quantity-field">
                        <button id="up" onclick="bookDetailModule.setQuantity('up',@Model.NumberInStock);">+</button>
                        <input type="text" id="quantity" value="1">
                        <button id="down" onclick="bookDetailModule.setQuantity('down',@Model.NumberInStock);">-</button>
                    </span>
                </div>
                <div class="command">
                    <button id="btnCreateOrder">Order</button>
                </div>
                </div>
            </div>
        @*<h3>@Model.BookName</h3>
            <h4 style="color:#007185">@Model.Author</h4>
            <p>$@Model.Price</p>
            <p>@Model.Isbncode</p>
            <p>@Model.StoreName</p>
            <p>@Model.NumberInStock</p>*@
    </div>
</div>

<script src="~/js/application/BookDetail.js"></script>
